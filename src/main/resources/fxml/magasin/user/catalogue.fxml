                                <MenuItem mnemonicParsing="false" text="Disponibilité" />
                                <MenuItem mnemonicParsing="false" text="Ordre Alphabétique" />
                                <MenuItem mnemonicParsing="false" text="Prix" />
                                <MenuItem mnemonicParsing="false" text="Type de produit" />
                            </items>
                            <font>
                                <Font size="24.0" />
                            </font>
                        </MenuButton>
                    </children>
                </HBox>
                <GridPane layoutX="125.0" layoutY="138.0" prefHeight="568.0" prefWidth="840.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
               <children>
                  <ImageView fx:id="produit" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="produit1" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" />
                  <ImageView fx:id="produit2" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" />
                  <ImageView fx:id="produit3" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1" />
                  <ImageView fx:id="produit4" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ImageView fx:id="produit5" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <ImageView fx:id="produit6" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2" />
                  <ImageView fx:id="produit7" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <ImageView fx:id="produit8" fitHeight="192.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
                </GridPane>
            <ImageView fx:id="gridIcon" fitHeight="70.0" fitWidth="82.0" layoutX="25.0" layoutY="135.0" onMouseClicked="#changeToGrid" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/magasin/grid_option.png" />
               </image>
            </ImageView>
            <ImageView fx:id="listIcon" fitHeight="70.0" fitWidth="82.0" layoutX="25.0" layoutY="230.0" onMouseClicked="#changeToList" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/magasin/list_option.png" />
               </image>
            </ImageView>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
