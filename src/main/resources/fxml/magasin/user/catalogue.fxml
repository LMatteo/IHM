<ScrollPane fx:id="paneCatalogue" prefHeight="748.0" prefWidth="1080.0" BorderPane.alignment="CENTER"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="magasin.user.CatalogueControl">
    <content>
        <AnchorPane fx:id="apCatalogue" prefHeight="737.0" prefWidth="1076.0">
            <children>
                <HBox layoutX="60.0" layoutY="37.0" prefHeight="57.0" prefWidth="967.0">
                    <children>
                        <HBox prefHeight="57.0" prefWidth="730.0">
                            <children>
                                <TextArea minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="273.0">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </TextArea>
                                <Button mnemonicParsing="false" prefHeight="57.0" prefWidth="155.0" text="Chercher">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <MenuButton mnemonicParsing="false" prefHeight="57.0" prefWidth="309.0" text="Trier par...">
