<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox prefHeight="267.0" prefWidth="892.0" styleClass="full-container-bout" xmlns="http://javafx.com/javafx/8.0.102"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="centre.user.CategoryItemController">
    <children>
        <VBox prefHeight="270.0" prefWidth="193.0">
            <children>
                <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           prefHeight="200.0" prefWidth="200.0" styleClass="logo-bout">
                    <children>
                        <ImageView fx:id="logo" fitHeight="184.0" fitWidth="184.0" onMouseClicked="#logoClick"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </children>
                </StackPane>
                <AnchorPane prefHeight="259.0" prefWidth="165.0" styleClass="location-bout">
                    <children>
                        <Label fx:id="mapLocation" alignment="CENTER" onMouseClicked="#locationClick" prefHeight="81.0"
                               prefWidth="199.0" text="YOLO">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
        <VBox prefHeight="150.0" prefWidth="791.0" styleClass="info-container-bout">
            <children>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="nom-bout">
                    <children>
                        <Label fx:id="name" alignment="CENTER" prefHeight="44.0" prefWidth="705.0"
                               text="Du sale mamène">
                            <font>
                                <Font size="27.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="326.0" prefWidth="705.0" styleClass="descr-bout">
                    <children>
                        <Label fx:id="promotion" alignment="CENTER" contentDisplay="CENTER" prefHeight="179.0"
                               prefWidth="704.0" text="Salu sa va" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font size="26.0"/>
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="page-bout">
                    <children>
                        <Label fx:id="storePage" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                               minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#storeClick" prefHeight="50.0"
                               prefWidth="705.0" text="Accéder à la page de la boutique">
                            <font>
                                <Font size="27.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</HBox>
